{
  "dxt_version": "0.1",
  "name": "notification-mcp",
  "version": "1.0.1",
  "display_name": "Notification Server",
  "description": "MCP server providing sound and desktop notification functionality (sound notifications only in Claude Desktop)",
  "author": {
    "name": "MySweetEden",
    "url": "https://github.com/MySweetEden/notification-mcp"
  },
  "license": "MIT",
  "server": {
    "type": "node",
    "entry_point": "dist/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/dist/index.js"],
      "env": {
        "NODE_ENV": "production",
        "MCP_LANG": "en",
        "CLAUDE_DESKTOP": "true"
      }
    }
  }
}
